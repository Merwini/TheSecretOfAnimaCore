<?xml version="1.0" encoding="utf-8"?>
<Defs>
	<IncidentDef>
		<defName>TSOA_AnimaBranchDrop</defName>
		<label>anima branch drop</label>
		<targetTags>
			<li>Map_PlayerHome</li>
		</targetTags>
		<workerClass>nuff.tsoa.core.IncidentWorker_AnimaBranchDrop</workerClass>
		<category>ShipChunkDrop</category>
		<baseChance>3</baseChance>
		<canOccurOnAllPlanetLayers>true</canOccurOnAllPlanetLayers>
	</IncidentDef>

	<ThingDef ParentName="BuildingBase" Name="ShipChunkBase">
		<defName>TSOA_AnimaBranch</defName>
		<label>anima branch</label>
		<description>A fallen branch from an anima tree. Despite falling from the tree, it still seems to be alive. Harvested properly, this could yield valuable anima bark and possibly other resources.</description>
		<category>Building</category>
		<graphicData>
			<texPath>Things/Item/Resource/WoodLog</texPath>
			<graphicClass>Graphic_StackCount</graphicClass>
			<drawSize>(1,2)</drawSize>
			<damageData>
				<rect>(0.1,0.1,1.8,1.8)</rect>
			</damageData>
			<shadowData>
				<volume>(1.39,0.5,1.25)</volume>
			</shadowData>
		</graphicData>
		<altitudeLayer>Building</altitudeLayer>
		<pathCost>42</pathCost>
		<blockWind>true</blockWind>
		<passability>PassThroughOnly</passability>
		<fillPercent>0.50</fillPercent>
		<size>(1,2)</size>
		<statBases>
			<MaxHitPoints>200</MaxHitPoints>
			<Flammability>0.8</Flammability>
			<Beauty>10</Beauty>
			<WorkToBuild>12000</WorkToBuild>
		</statBases>
		<leaveResourcesWhenKilled>false</leaveResourcesWhenKilled>
		<killedLeavings>
			<TSOA_AnimaBark>1</TSOA_AnimaBark>
			<WoodLog>10</WoodLog>
		</killedLeavings>
		<costList>
			<TSOA_AnimaBark>11</TSOA_AnimaBark>
			<TSOA_AnimaSap>1</TSOA_AnimaSap>
			<WoodLog>40</WoodLog>
		</costList>
		<building>
			<claimable>false</claimable>
			<alwaysDeconstructible>true</alwaysDeconstructible>
		</building>
		<selectable>true</selectable>
		<soundImpactDefault>BulletImpact_Wood</soundImpactDefault>
		<drawerType>MapMeshOnly</drawerType>
		<repairEffect>ConstructWood</repairEffect>
		<comps>
			<li Class="CompProperties_InspectString">
				<inspectString>Deconstruct for valuable resources.</inspectString>
			</li>
		</comps>
	</ThingDef>
</Defs>